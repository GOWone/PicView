<UserControl
    x:Class="PicView.Views.UserControls.QuickSettingsMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uc="clr-namespace:PicView.Views.UserControls"
    Foreground="{StaticResource MainColorBrush}">
    <StackPanel>
        <Border
            Width="358"
            Height="178"
            Background="{StaticResource NoisyBg}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            Effect="{StaticResource MenuShadow}">

            <Canvas VerticalAlignment="Top">
                <Canvas.Effect>
                    <DropShadowEffect
                        BlurRadius="1"
                        Direction="265"
                        ShadowDepth="1"
                        Color="{StaticResource AltInterface}" />
                </Canvas.Effect>

                <Rectangle
                    Canvas.Top="50"
                    Width="357"
                    Panel.ZIndex="1"
                    Stroke="{StaticResource BorderBrush}"
                    StrokeThickness="1" />

                <Rectangle
                    Canvas.Left="51"
                    Width="1"
                    Height="50"
                    Panel.ZIndex="1"
                    Stroke="{StaticResource BorderBrush}"
                    StrokeThickness="1" />
                <Rectangle
                    Canvas.Left="102"
                    Canvas.Top="-1"
                    Width="1"
                    Height="51"
                    Panel.ZIndex="1"
                    Stroke="{StaticResource BorderBrush}"
                    StrokeThickness="1" />
                <Rectangle
                    Canvas.Left="304"
                    Width="1"
                    Height="50"
                    Panel.ZIndex="1"
                    Stroke="{StaticResource BorderBrush}"
                    StrokeThickness="1" />
                <Rectangle
                    Canvas.Left="154"
                    Canvas.Top="0"
                    Width="1"
                    Height="50"
                    Panel.ZIndex="1"
                    Stroke="{StaticResource BorderBrush}"
                    StrokeThickness="1" />

                <uc:InfoButton x:Name="InfoButton" />

                <uc:SettingsButton x:Name="SettingsButton" Canvas.Left="51" />

                <uc:SearchButton x:Name="ZoomButton" Canvas.Left="103" />

                <Canvas
                    x:Name="ZoomSliderParent"
                    Opacity="0"
                    Visibility="Collapsed">
                    <Border
                        Canvas.Left="80"
                        Canvas.Top="-44"
                        Panel.ZIndex="3"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="2">
                        <Canvas
                            Width="115"
                            Height="27"
                            Background="{StaticResource BackgroundColorBrushAlt}">
                            <Slider
                                x:Name="ZoomSlider"
                                Canvas.Left="3"
                                Canvas.Top="3"
                                Width="95"
                                Maximum="14"
                                Minimum="1" />
                        </Canvas>
                    </Border>

                    <Rectangle
                        Canvas.Left="113"
                        Canvas.Top="-15"
                        Width="28"
                        Height="2"
                        Panel.ZIndex="4"
                        Fill="{StaticResource BackgroundColorBrush}" />
                    <Polygon
                        Canvas.Left="112"
                        Canvas.Top="-14"
                        Fill="{StaticResource BackgroundColorBrush}"
                        Points="0,0 15,30, 30,0"
                        Stroke="{StaticResource BorderBrush}"
                        StrokeThickness="2" />
                </Canvas>

                <uc:BackGroundButton
                    x:Name="BackgroundButton"
                    Canvas.Left="155"
                    Width="51"
                    Height="51" />

                <Rectangle
                    Canvas.Left="206"
                    Canvas.Top="0"
                    Width="1"
                    Height="50"
                    Panel.ZIndex="1"
                    Stroke="{StaticResource BorderBrush}"
                    StrokeThickness="1" />

                <uc:GoToPicButton x:Name="GoToPic" Canvas.Left="207" />

                <uc:MenuCloseButton
                    x:Name="CloseButton"
                    Canvas.Left="305"
                    ToolTip="Close" />

                <Border
                    Canvas.Left="6"
                    Canvas.Top="58"
                    Width="167"
                    Height="51"
                    Background="{StaticResource BackgroundColorBrushAlt}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="2"
                    Effect="{StaticResource MenuShadowButtonBorder}">
                    <CheckBox
                        x:Name="SetFit"
                        HorizontalContentAlignment="Center"
                        FontFamily="/PicView;component/Themes/Resources/fonts/#Roboto"
                        Style="{StaticResource Checkstyle}">
                        <CheckBox.Content>
                            <TextBlock
                                MaxWidth="127"
                                Text="{StaticResource ResourceKey=AutoFitWindow}"
                                TextWrapping="Wrap" />
                        </CheckBox.Content>
                        <CheckBox.Foreground>
                            <SolidColorBrush x:Name="SetFitFill" Color="{StaticResource MainColor}" />
                        </CheckBox.Foreground>
                        <CheckBox.Background>
                            <SolidColorBrush x:Name="SetFitBrush" Color="Transparent" />
                        </CheckBox.Background>
                    </CheckBox>
                </Border>

                <Border
                    Canvas.Left="184"
                    Canvas.Top="58"
                    Width="167"
                    Height="51"
                    Background="{StaticResource BackgroundColorBrushAlt}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="2"
                    Effect="{StaticResource MenuShadowButtonBorder}">
                    <CheckBox
                        x:Name="ToggleFill"
                        HorizontalContentAlignment="Center"
                        FontFamily="/PicView;component/Themes/Resources/fonts/#Roboto"
                        Style="{StaticResource Checkstyle}">
                        <CheckBox.Content>
                            <TextBlock
                                MaxWidth="127"
                                Text="{StaticResource ResourceKey=FillImageHeight}"
                                TextWrapping="Wrap" />
                        </CheckBox.Content>
                        <CheckBox.Foreground>
                            <SolidColorBrush x:Name="ToggleFillFill" Color="{StaticResource MainColor}" />
                        </CheckBox.Foreground>
                        <CheckBox.Background>
                            <SolidColorBrush x:Name="ToggleFillBrush" Color="Transparent" />
                        </CheckBox.Background>
                    </CheckBox>
                </Border>

                <Border
                    Canvas.Left="184"
                    Canvas.Top="115"
                    Width="167"
                    Height="51"
                    Background="{StaticResource BackgroundColorBrushAlt}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="2"
                    Effect="{StaticResource MenuShadowButtonBorder}">
                    <CheckBox
                        x:Name="ToggleScroll"
                        HorizontalContentAlignment="Center"
                        FontFamily="/PicView;component/Themes/Resources/fonts/#Roboto"
                        Style="{StaticResource Checkstyle}">
                        <CheckBox.Content>
                            <TextBlock
                                MaxWidth="127"
                                Text="{StaticResource ResourceKey=ToggleScroll}"
                                TextWrapping="Wrap" />
                        </CheckBox.Content>
                        <CheckBox.Foreground>
                            <SolidColorBrush x:Name="ToggleScrollFill" Color="{StaticResource MainColor}" />
                        </CheckBox.Foreground>
                        <CheckBox.Background>
                            <SolidColorBrush x:Name="ToggleScrollBrush" Color="Transparent" />
                        </CheckBox.Background>
                    </CheckBox>
                </Border>

                <Border
                    Canvas.Left="6"
                    Canvas.Top="115"
                    Width="167"
                    Height="51"
                    Background="{StaticResource BackgroundColorBrushAlt}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="2"
                    Effect="{StaticResource MenuShadowButtonBorder}">
                    <CheckBox
                        x:Name="ToggleLooping"
                        HorizontalContentAlignment="Center"
                        FontFamily="/PicView;component/Themes/Resources/fonts/#Roboto"
                        Style="{StaticResource Checkstyle}">
                        <CheckBox.Content>
                            <TextBlock
                                MaxWidth="127"
                                Text="{StaticResource ResourceKey=ToggleLooping}"
                                TextWrapping="Wrap" />
                        </CheckBox.Content>
                        <CheckBox.Foreground>
                            <SolidColorBrush x:Name="ToggleLoopFill" Color="{StaticResource MainColor}" />
                        </CheckBox.Foreground>
                        <CheckBox.Background>
                            <SolidColorBrush x:Name="ToggleLoopBrush" Color="Transparent" />
                        </CheckBox.Background>
                    </CheckBox>
                </Border>
            </Canvas>
        </Border>
        <Rectangle
            Width="24"
            Height="2"
            Margin="0,-2,87,0"
            HorizontalAlignment="Right"
            Fill="{StaticResource BorderBrushAlt}" />
        <Polygon
            Margin="244,-7,0,0"
            Panel.ZIndex="-1"
            Fill="{StaticResource BorderBrushAlt}"
            Points="0,0 15,30, 30,0"
            Stroke="{StaticResource BorderBrush}"
            StrokeThickness="1" />
    </StackPanel>
</UserControl>