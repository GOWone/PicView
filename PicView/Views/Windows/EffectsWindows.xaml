<Window
    x:Class="PicView.Views.Windows.EffectsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:PicView.Views.UserControls"
    Title="{StaticResource HLSLPictureFX}"
    Width="559"
    Height="600"
    BorderBrush="{DynamicResource WindowBorderColorBrush}"
    BorderThickness="1"
    FontFamily="/PicView;component/Themes/Resources/fonts/#Tex Gyre Heros"
    Foreground="{StaticResource MainColorBrush}"
    ResizeMode="CanMinimize"
    Style="{DynamicResource MyWindowStyle}"
    mc:Ignorable="d">

    <DockPanel LastChildFill="True">
        <DockPanel
            x:Name="TitleBar"
            Height="30"
            Background="{StaticResource WindowBackgroundColorBrush}"
            DockPanel.Dock="Top">

            <uc:Logo />

            <Rectangle
                Width="1"
                Height="30"
                Margin="6,0,0,0"
                Fill="{StaticResource BorderBrush}" />

            <uc:CloseButton
                x:Name="CloseButton"
                Width="30"
                Height="30"
                VerticalAlignment="Center"
                DockPanel.Dock="Right" />

            <Rectangle
                Width="1"
                Height="30"
                DockPanel.Dock="Right"
                Fill="{StaticResource BorderBrush}" />

            <uc:MinButton
                x:Name="MinButton"
                Width="30"
                Height="30"
                VerticalAlignment="Center"
                DockPanel.Dock="Right" />

            <Rectangle
                Width="1"
                Height="30"
                DockPanel.Dock="Right"
                Fill="{StaticResource BorderBrush}" />

            <TextBlock
                x:Name="Bar"
                Height="30"
                Padding="0,2,0,0"
                VerticalAlignment="Center"
                Background="{StaticResource BackgroundSubtleHighlightBrush}"
                FontSize="16"
                FontWeight="Bold"
                Foreground="{StaticResource MainColorBrush}"
                Text="{StaticResource ShaderEffects}"
                TextAlignment="Center"
                TextTrimming="CharacterEllipsis" />
        </DockPanel>

        <Rectangle
            Height="1"
            DockPanel.Dock="Top"
            Fill="{StaticResource BorderBrush}" />

        <StackPanel Background="{StaticResource NoisyBg}">
            <WrapPanel
                x:Name="EffectsContainer"
                Margin="10,10,10,0"
                Orientation="Horizontal">

                <Border
                    Width="175"
                    Height="42"
                    Margin="0,0,4,4"
                    BorderBrush="{StaticResource BorderBrush}"
                    CornerRadius="3"
                    Style="{StaticResource ButtonBorder}">
                    <CheckBox x:Name="NegativeButton">
                        <CheckBox.Background>
                            <SolidColorBrush x:Name="NegativeButtonBrush" Color="Transparent" />
                        </CheckBox.Background>
                        <TextBlock
                            Width="140"
                            Margin="8,2,9,0"
                            FontFamily="/PicView;component/Themes/Resources/fonts/#Roboto Medium"
                            Text="{StaticResource NegativeColors}"
                            TextWrapping="Wrap">
                            <TextBlock.Foreground>
                                <SolidColorBrush x:Name="NegativeColorsText" Color="{StaticResource MainColor}" />
                            </TextBlock.Foreground>
                        </TextBlock>
                    </CheckBox>
                </Border>

                <Border
                    x:Name="GrayscaleButtonBorder"
                    Width="175"
                    Height="42"
                    Margin="0,0,4,4"
                    BorderBrush="{StaticResource BorderBrush}"
                    CornerRadius="3"
                    Style="{StaticResource ButtonBorder}">
                    <CheckBox x:Name="GrayscaleButton">
                        <CheckBox.Background>
                            <SolidColorBrush x:Name="GrayscaleButtonBrush" Color="Transparent" />
                        </CheckBox.Background>
                        <TextBlock
                            Width="140"
                            Margin="8,2,9,0"
