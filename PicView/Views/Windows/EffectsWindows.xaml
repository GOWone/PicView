                    <CheckBox x:Name="BandsButton">
                        <CheckBox.Background>
                            <SolidColorBrush x:Name="BandsButtonBrush" Color="Transparent" />
                        </CheckBox.Background>
                        <TextBlock
                            Width="140"
                            Margin="8,2,9,0"
                            FontFamily="/PicView;component/Themes/Resources/fonts/#Roboto Medium"
                            Text="{StaticResource Bands}"
                            TextWrapping="Wrap">
                            <TextBlock.Foreground>
