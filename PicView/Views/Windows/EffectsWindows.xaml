                    Height="42"
                    Margin="0,0,4,4"
                    BorderBrush="{StaticResource BorderBrush}"
                    CornerRadius="3"
                    Style="{StaticResource ButtonBorder}">
                    <CheckBox x:Name="EmbossedButton">
                        <CheckBox.Background>
                            <SolidColorBrush x:Name="EmbossedButtonBrush" Color="Transparent" />
                        </CheckBox.Background>
                        <TextBlock
                            Width="140"
                            Margin="8,2,9,0"
                            FontFamily="/PicView;component/Themes/Resources/fonts/#Roboto Medium"
                            Text="{StaticResource Embossed}"
                            TextWrapping="Wrap">
                            <TextBlock.Foreground>
                                <SolidColorBrush x:Name="EmbossedText" Color="{StaticResource MainColor}" />
                            </TextBlock.Foreground>
                        </TextBlock>
                    </CheckBox>
                </Border>

                <Border
                    Width="175"
                    Height="42"
                    Margin="0,0,4,4"
                    BorderBrush="{StaticResource BorderBrush}"
                    CornerRadius="3"
                    Style="{StaticResource ButtonBorder}">
                    <CheckBox x:Name="SmoothMagnifyButton">
                        <CheckBox.Background>
                            <SolidColorBrush x:Name="SmoothMagnifyButtonBrush" Color="Transparent" />
                        </CheckBox.Background>
                        <TextBlock
                            Width="140"
                            Margin="8,2,9,0"
