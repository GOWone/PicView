                    <CheckBox x:Name="RippleButton">
                        <CheckBox.Background>
                            <SolidColorBrush x:Name="RippleButtonBrush" Color="Transparent" />
                        </CheckBox.Background>
                        <TextBlock
                            Width="140"
                            Margin="8,2,9,0"
