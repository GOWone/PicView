                            <TextBlock.Foreground>
                                <SolidColorBrush x:Name="SmoothMagnifyText" Color="{StaticResource MainColor}" />
                            </TextBlock.Foreground>
                        </TextBlock>
                    </CheckBox>
                </Border>

                <Border
                    Width="175"
                    Height="42"
                    Margin="0,0,4,4"
                    BorderBrush="{StaticResource BorderBrush}"
                    CornerRadius="3"
                    Style="{StaticResource ButtonBorder}">
                    <CheckBox x:Name="PivotButton">
                        <CheckBox.Background>
                            <SolidColorBrush x:Name="PivotButtonBrush" Color="Transparent" />
                        </CheckBox.Background>
                        <TextBlock
                            Width="140"
                            Margin="8,2,9,0"
                            FontFamily="/PicView;component/Themes/Resources/fonts/#Roboto Medium"
                            Text="{StaticResource Pivot}"
                            TextWrapping="Wrap">
                            <TextBlock.Foreground>
                                <SolidColorBrush x:Name="PivotText" Color="{StaticResource MainColor}" />
                            </TextBlock.Foreground>
                        </TextBlock>
                    </CheckBox>
                </Border>

                <Border
                    Width="175"
                    Height="42"
                    Margin="0,0,4,4"
                    BorderBrush="{StaticResource BorderBrush}"
                    CornerRadius="3"
                    Style="{StaticResource ButtonBorder}">
                    <CheckBox x:Name="PaperfoldButton">
                        <CheckBox.Background>
                            <SolidColorBrush x:Name="PaperfoldButtonBrush" Color="Transparent" />
                        </CheckBox.Background>
                        <TextBlock
                            Width="140"
                            Margin="8,2,9,0"
                            FontFamily="/PicView;component/Themes/Resources/fonts/#Roboto Medium"
                            Text="{StaticResource PaperFold}"
                            TextWrapping="Wrap">
                            <TextBlock.Foreground>
