                    CornerRadius="3"
                    Style="{StaticResource ButtonBorder}">
                    <CheckBox x:Name="TelescopicBlurButton">
                        <CheckBox.Background>
                            <SolidColorBrush x:Name="TelescopicBlurButtonBrush" Color="Transparent" />
                        </CheckBox.Background>
                        <TextBlock
                            Width="140"
                            Margin="8,2,9,0"
                            FontFamily="/PicView;component/Themes/Resources/fonts/#Roboto Medium"
                            Text="{StaticResource TelescopicBlur}"
                            TextWrapping="Wrap">
                            <TextBlock.Foreground>
                                <SolidColorBrush x:Name="TelescopicBlurText" Color="{StaticResource MainColor}" />
                            </TextBlock.Foreground>
                        </TextBlock>
                    </CheckBox>
                </Border>

                <Border
                    Width="175"
                    Height="42"
                    Margin="0,0,4,4"
                    BorderBrush="{StaticResource BorderBrush}"
                    CornerRadius="3"
                    Style="{StaticResource ButtonBorder}">
                    <CheckBox x:Name="PixelateButton">
                        <CheckBox.Background>
                            <SolidColorBrush x:Name="PixelateButtonBrush" Color="Transparent" />
                        </CheckBox.Background>
                        <TextBlock
                            Width="140"
                            Margin="8,2,9,0"
