                    Style="{StaticResource ButtonBorder}">
                    <CheckBox x:Name="BlurButton">
                        <CheckBox.Background>
                            <SolidColorBrush x:Name="BlurButtonBrush" Color="Transparent" />
                        </CheckBox.Background>
                        <TextBlock
                            Width="140"
                            Margin="8,2,9,0"
