                            <TextBlock.Foreground>
                                <SolidColorBrush x:Name="ColorToneText" Color="{StaticResource MainColor}" />
                            </TextBlock.Foreground>
                        </TextBlock>
                    </CheckBox>
                </Border>

                <Border
                    Width="175"
                    Height="42"
                    Margin="0,0,4,4"
