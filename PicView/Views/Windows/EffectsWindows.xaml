            </WrapPanel>

            <Slider
                x:Name="IntensitySlider"
                Width="229"
                Height="30"
                Margin="0,8,0,0"
                IsMoveToPointEnabled="True"
                IsSnapToTickEnabled="True"
                Maximum="200"
                Minimum="0"
                TickFrequency="1.5"
                Value="100" />

            <TextBlock
                Margin="0,8,0,4"
                HorizontalAlignment="Center"
                Text="{StaticResource ClickToAddShaderEffectToImage}" />
            <TextBlock HorizontalAlignment="Center" Text="{StaticResource UncheckToRemoveEffect}" />

            <Border
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{StaticResource BackgroundColorBrushAlt}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="2"
                Effect="{StaticResource MenuShadowButtonBorder}"
                Focusable="False">
                <Label
                    x:Name="SaveButton"
                    Padding="15,10,15,10"
                    Content="{StaticResource Save}">
                    <Label.Background>
                        <SolidColorBrush x:Name="SaveBrush" Color="{StaticResource BackgroundColorAlt}" />
                    </Label.Background>
                    <Label.Foreground>
                        <SolidColorBrush x:Name="SaveText" Color="{StaticResource MainColor}" />
                    </Label.Foreground>
                </Label>
            </Border>

        </StackPanel>
    </DockPanel>
</Window>