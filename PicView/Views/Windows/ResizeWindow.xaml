<Window x:Class="PicView.Views.Windows.ResizeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:PicView.Views.UserControls"
        Width="325"
        BorderBrush="{DynamicResource WindowBorderColorBrush}"
        BorderThickness="1"
        FontFamily="/PicView;component/Themes/Resources/fonts/#Roboto"
        Foreground="{StaticResource MainColorBrush}"
        ResizeMode="CanMinimize"
        SizeToContent="Height"
        Style="{DynamicResource MyWindowStyle}"
        mc:Ignorable="d">
    <DockPanel Background="{StaticResource NoisyBg}">
        <Grid
            x:Name="TitleBar"
            Height="30"
            Background="{StaticResource WindowBackgroundColorBrush}"
            DockPanel.Dock="Top">

            <uc:Logo HorizontalAlignment="Left" />

            <uc:MinButton
                x:Name="MinButton"
                Width="30"
                Height="30"
                Margin="0,0,30,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center" />

            <uc:CloseButton
                x:Name="CloseButton"
                Width="30"
                Height="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Center" />
        </Grid>

        <Rectangle
            Height="1"
            DockPanel.Dock="Top"
            Fill="{StaticResource BorderBrush}" />

        
    </DockPanel>
</Window>
