<Window
    x:Class="PicView.Views.Windows.InfoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:buttons="clr-namespace:PicView.Views.UserControls.Buttons"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:misc="clr-namespace:PicView.Views.UserControls.Misc"
    Title="{StaticResource ResourceKey=InfoWindowTitle}"
    Height="378"
    MinHeight="378"
    d:Height="Auto"
    AllowsTransparency="True"
    BorderBrush="{StaticResource BorderBrush}"
    BorderThickness="1"
    FontFamily="/PicView;component/Themes/Resources/fonts/#Roboto"
    Foreground="{StaticResource MainColorBrush}"
    Style="{DynamicResource MyWindowStyle}"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="txtItalic" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="/PicView;component/Themes/Resources/fonts/#Roboto LightItalic" />
            <Setter Property="FontStyle" Value="Italic" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Foreground" Value="{StaticResource MainColorFadedBrush}" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=Text}" />
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">

        <DockPanel
            x:Name="TitleBar"
            Height="30"
            Background="{StaticResource WindowBackgroundColorBrush}"
            DockPanel.Dock="Top">

            <misc:Icon />

            <buttons:CloseButton
                x:Name="CloseButton"
                Width="30"
                Height="30"
                DockPanel.Dock="Right" />

            <buttons:MinButton
                x:Name="MinButton"
                Width="30"
                Height="30"
                DockPanel.Dock="Right" />

            <TextBlock
                Width="Auto"
                Margin="0,0,0,0"
                VerticalAlignment="Center"
                FontFamily="/PicView;component/Themes/Resources/fonts/#Roboto Bold"
                FontSize="14"
                Text="{StaticResource InfoWindowTitle}"
                TextAlignment="Center" />
        </DockPanel>

        <Rectangle
            Height="1"
            DockPanel.Dock="Top"
            Fill="{StaticResource BorderBrush}" />

        <ScrollViewer
            x:Name="Scroller"
            Background="{StaticResource MenuBg}"
            CanContentScroll="False"
            Focusable="False"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Hidden">

            <StackPanel>

                <StackPanel Margin="0,36,0,0">

                    <Image
                        Height="75"
                        Margin="0,0,0,5"
                        RenderOptions.BitmapScalingMode="Fant"
                        RenderOptions.EdgeMode="Aliased"
                        Source="pack://application:,,,/Themes/Resources/img/logo.png" />

                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <TextBlock>
                            <Hyperlink NavigateUri="https://github.com/Ruben2776/PicView" RequestNavigate="Hyperlink_RequestNavigate">
                                <Hyperlink.Foreground>
                                    <SolidColorBrush x:Name="GitHubBrush" Color="{StaticResource MainColor}" />
                                </Hyperlink.Foreground>
                                <TextBlock
                                    x:Name="GitHub"
                                    FontSize="14"
                                    Text="{StaticResource ResourceKey=GithubRepo}"
                                    TextAlignment="Center"
                                    ToolTip="https://github.com/Ruben2776/PicView" />
                            </Hyperlink>
                        </TextBlock>
                        <Path
                            Width="16"
                            Height="16"
                            Margin="5,0,0,0"
                            Data="M256,32C132.3,32,32,134.9,32,261.7c0,101.5,64.2,187.5,153.2,217.9a17.56,17.56,0,0,0,3.8.4c8.3,0,11.5-6.1,11.5-11.4,0-5.5-.2-19.9-.3-39.1a102.4,102.4,0,0,1-22.6,2.7c-43.1,0-52.9-33.5-52.9-33.5-10.2-26.5-24.9-33.6-24.9-33.6-19.5-13.7-.1-14.1,1.4-14.1h.1c22.5,2,34.3,23.8,34.3,23.8,11.2,19.6,26.2,25.1,39.6,25.1a63,63,0,0,0,25.6-6c2-14.8,7.8-24.9,14.2-30.7-49.7-5.8-102-25.5-102-113.5,0-25.1,8.7-45.6,23-61.6-2.3-5.8-10-29.2,2.2-60.8a18.64,18.64,0,0,1,5-.5c8.1,0,26.4,3.1,56.6,24.1a208.21,208.21,0,0,1,112.2,0c30.2-21,48.5-24.1,56.6-24.1a18.64,18.64,0,0,1,5,.5c12.2,31.6,4.5,55,2.2,60.8,14.3,16.1,23,36.6,23,61.6,0,88.2-52.4,107.6-102.3,113.3,8,7.1,15.2,21.1,15.2,42.5,0,30.7-.3,55.5-.3,63,0,5.4,3.1,11.5,11.4,11.5a19.35,19.35,0,0,0,4-.4C415.9,449.2,480,363.1,480,261.7,480,134.9,379.7,32,256,32Z"
                            Fill="{StaticResource MainColorBrush}"
                            Stretch="Fill" />
                    </StackPanel>

                    <TextBlock Margin="0,7,0,4" HorizontalAlignment="Center">
                        <Hyperlink NavigateUri="https://picView.org/" RequestNavigate="Hyperlink_RequestNavigate">
                            <Hyperlink.Foreground>
                                <SolidColorBrush x:Name="PicViewBrush" Color="{StaticResource MainColor}" />
                            </Hyperlink.Foreground>
                            <TextBlock
                                x:Name="PicViewSite"
                                FontSize="14"
                                Text="PicView.org"
                                TextAlignment="Center"
                                ToolTip="https://picView.org/" />
                        </Hyperlink>
                    </TextBlock>

                    <TextBlock
                        Margin="0,7,0,2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontSize="14"
                        Text="2017 - 2023 © Ruben Hyldgaard Negendahl" />

                    <TextBlock
                        Margin="0,8,0,2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom">
                        <Hyperlink NavigateUri="https://github.com/Ruben2776/PicView/blob/master/LICENSE.txt" RequestNavigate="Hyperlink_RequestNavigate">
                            <Hyperlink.Foreground>
                                <SolidColorBrush x:Name="LicenseBrush" Color="{StaticResource MainColor}" />
                            </Hyperlink.Foreground>
                            <TextBlock
                                x:Name="License"
                                FontSize="12"
                                Text="GNU GPLv3"
                                ToolTip="{StaticResource ResourceKey=ViewLicenseFile}" />
                        </Hyperlink>
                    </TextBlock>

                    <TextBlock
                        x:Name="appVersion"
                        Margin="0,17,0,15"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="{StaticResource ResourceKey=Version}" />

                    <Border
                        Margin="0,0,0,21"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="{StaticResource BackgroundColorBrushAlt}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="2"
                        Effect="{StaticResource MenuShadowButtonBorder}"
                        Focusable="False">
                        <Label
                            x:Name="UpdateButton"
                            Padding="10"
                            Content="{StaticResource CheckForUpdates}">
                            <Label.Background>
                                <SolidColorBrush x:Name="UpdateBrush" Color="{StaticResource BackgroundColorAlt}" />
                            </Label.Background>
                            <Label.Foreground>
                                <SolidColorBrush x:Name="UpdateText" Color="{StaticResource MainColor}" />
                            </Label.Foreground>
                        </Label>
                    </Border>
                </StackPanel>

                <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,1">
                    <Button x:Name="ExpandButton" Height="25">
                        <Button.Background>
                            <SolidColorBrush x:Name="ExpandButtonBg" Color="{StaticResource BackgroundColorFadeSubtle}" />
                        </Button.Background>
                        <Image Width="20" Height="20">
                            <Image.Source>
                                <DrawingImage>
                                    <DrawingImage.Drawing>
                                        <DrawingGroup ClipGeometry="M0,0 V512 H512 V0 H0 Z">
                                            <GeometryDrawing x:Name="xGeo" Geometry="F1 M512,512z M0,0z M98,190.06L237.78,353.18A24,24,0,0,0,274.22,353.18L414,190.06C427.34,174.49,416.28,150.44,395.78,150.44L116.18,150.44C95.6799999999999,150.44,84.6199999999999,174.49,97.9999999999999,190.06z">
                                                <GeometryDrawing.Brush>
                                                    <SolidColorBrush x:Name="chevronDownBrush" Color="{StaticResource IconColor}" />
                                                </GeometryDrawing.Brush>
                                            </GeometryDrawing>
                                        </DrawingGroup>
                                    </DrawingImage.Drawing>
                                </DrawingImage>
                            </Image.Source>
                        </Image>
                    </Button>
                </Border>

                <Label
                    Margin="0,12,0,4"
                    HorizontalAlignment="Center"
                    Content="{StaticResource ResourceKey=ApplicationShortcuts}"
                    FontFamily="/PicView;component/Themes/Resources/fonts/#Roboto Black"
                    FontSize="16" />

                <Label
                    Width="480"
                    Margin="-4,0,0,10"
                    Content="{StaticResource ResourceKey=Navigation}" />

                <Grid Width="480" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="130" />
                        <ColumnDefinition Width="170" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Border
                        Grid.Row="0"
                        Grid.Column="0"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundSubtleHighlightBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,1,1,0">
                        <TextBlock
                            Margin="10,3,0,3"
                            FontSize="12"
                            Text="{StaticResource ResourceKey=NextImage}" />
                    </Border>

                    <Border
                        Grid.Row="0"
                        Grid.Column="1"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundSubtleHighlightBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,1,0">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="D" />
                    </Border>

                    <Border
                        Grid.Row="0"
                        Grid.Column="2"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundSubtleHighlightBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,1,0">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="{StaticResource ResourceKey=Right}" />
                    </Border>

                    <Border
                        Grid.Row="1"
                        Grid.Column="0"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundColorBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,1,1,0">
                        <TextBlock
                            Margin="10,3,0,3"
                            d:Text="Previous image"
                            FontSize="12"
                            Text="{StaticResource ResourceKey=PrevImage}" />
                    </Border>

                    <Border
                        Grid.Row="1"
                        Grid.Column="1"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundColorBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,1,0">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="A" />
                    </Border>

                    <Border
                        Grid.Row="1"
                        Grid.Column="2"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundColorBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,1,0">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="{StaticResource ResourceKey=Left}" />
                    </Border>

                    <Border
                        Grid.Row="2"
                        Grid.Column="0"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundSubtleHighlightBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,1,1,1">
                        <TextBlock
                            Margin="10,3,0,3"
                            FontSize="12"
                            Text="{StaticResource ResourceKey=FirstImage}" />
                    </Border>

                    <Border
                        Grid.Row="2"
                        Grid.Column="1"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundSubtleHighlightBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,1,1">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock FontSize="12" Text="{StaticResource ResourceKey=Ctrl}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{StaticResource MainColorFadedBrush}"
                                Text=" + " />
                            <TextBlock FontSize="12" Text="A" />
                        </StackPanel>
                    </Border>

                    <Border
                        Grid.Row="2"
                        Grid.Column="2"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundSubtleHighlightBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,1,1">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock FontSize="12" Text="{StaticResource ResourceKey=Ctrl}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{StaticResource MainColorFadedBrush}"
                                Text=" + " />
                            <TextBlock
                                d:Text="Left"
                                FontSize="12"
                                Text="{StaticResource ResourceKey=Left}" />
                        </StackPanel>
                    </Border>

                    <Border
                        Grid.Row="4"
                        Grid.Column="0"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundColorBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,0,1,0">
                        <TextBlock
                            Margin="10,3,0,3"
                            FontSize="12"
                            Text="{StaticResource ResourceKey=LastImage}" />
                    </Border>

                    <Border
                        Grid.Row="4"
                        Grid.Column="1"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundColorBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,1,0">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock FontSize="12" Text="{StaticResource ResourceKey=Ctrl}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{StaticResource MainColorFadedBrush}"
                                Text=" + " />
                            <TextBlock FontSize="12" Text="D" />
                        </StackPanel>
                    </Border>

                    <Border
                        Grid.Row="4"
                        Grid.Column="2"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundColorBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,1,0">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock FontSize="12" Text="{StaticResource ResourceKey=Ctrl}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{StaticResource MainColorFadedBrush}"
                                Text=" + " />
                            <TextBlock
                                d:Text="Right"
                                FontSize="12"
                                Text="{StaticResource ResourceKey=Right}" />
                        </StackPanel>
                    </Border>

                    <Border
                        Grid.Row="5"
                        Grid.Column="0"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundSubtleHighlightBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,1,1,1">
                        <TextBlock
                            Margin="10,3,0,3"
                            FontSize="12"
                            Text="{StaticResource ResourceKey=ToggleLooping}" />
                    </Border>

                    <Border
                        Grid.Row="5"
                        Grid.Column="1"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundSubtleHighlightBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,1,1">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="L" />
                    </Border>

                    <Border
                        Grid.Row="5"
                        Grid.Column="2"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundSubtleHighlightBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,1,1">
                        <TextBlock
                            MaxWidth="155"
                            Style="{StaticResource txtItalic}"
                            Text="{StaticResource ResourceKey=SavedOnNextStartUp}"
                            TextWrapping="Wrap" />
                    </Border>
                </Grid>

                <Label
                    Width="480"
                    Margin="-4,0,0,10"
                    Content="{StaticResource ResourceKey=ImageControl}" />

                <Grid Width="480" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="130" />
                        <ColumnDefinition Width="170" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Border
                        Grid.Row="0"
                        Grid.Column="0"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundSubtleHighlightBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,1,1,0">
                        <TextBlock
                            Margin="10,3,0,3"
                            FontSize="12"
                            Text="{StaticResource ResourceKey=RotateRight}" />
                    </Border>

                    <Border
                        Grid.Row="0"
                        Grid.Column="1"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundSubtleHighlightBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,1,0">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="{StaticResource Up}" />
                    </Border>

                    <Border
                        Grid.Row="0"
                        Grid.Column="2"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundSubtleHighlightBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,1,0">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="W" />
                    </Border>

                    <Border
                        Grid.Row="1"
                        Grid.Column="0"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundColorBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,1,1,1">
                        <TextBlock
                            Margin="10,3,0,3"
                            FontSize="12"
                            Text="{StaticResource ResourceKey=RotateLeft}" />
                    </Border>

                    <Border
                        Grid.Row="1"
                        Grid.Column="1"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundColorBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,1,1">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="{StaticResource Down}" />
                    </Border>

                    <Border
                        Grid.Row="1"
                        Grid.Column="2"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundColorBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,1,1,1">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="S" />
                    </Border>

                    <Border
                        Grid.Row="2"
                        Grid.Column="0"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundSubtleHighlightBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,0,1,1">
                        <TextBlock
                            Margin="10,3,0,3"
                            FontSize="12"
                            Text="{StaticResource ResourceKey=Flip}" />
                    </Border>

                    <Border
                        Grid.Row="2"
                        Grid.Column="1"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundSubtleHighlightBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,1,1">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="F" />
                    </Border>

                    <Border
                        Grid.Row="2"
                        Grid.Column="2"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundSubtleHighlightBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,1,1" />

                    <Border
                        Grid.Row="3"
                        Grid.Column="0"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundColorBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,1,1,1">
                        <TextBlock
                            Margin="10,3,0,3"
                            FontSize="12"
                            Text="{StaticResource ResourceKey=Crop}" />
                    </Border>

                    <Border
                        Grid.Row="3"
                        Grid.Column="1"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundColorBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,1,1">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="C" />
                    </Border>

                    <Border
                        Grid.Row="3"
                        Grid.Column="2"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundColorBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,1,1,1" />

                    <Border
                        Grid.Row="4"
                        Grid.Column="0"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundSubtleHighlightBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,1,1,1">
                        <TextBlock
                            Margin="10,3,0,3"
                            FontSize="12"
                            Text="{StaticResource ResourceKey=CopyImage}" />
                    </Border>

                    <Border
                        Grid.Row="4"
                        Grid.Column="1"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundSubtleHighlightBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,1,1">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock FontSize="12" Text="{StaticResource ResourceKey=Ctrl}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{StaticResource MainColorFadedBrush}"
                                Text=" + " />
                            <TextBlock FontSize="12" Text="{StaticResource ResourceKey=Shift}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{StaticResource MainColorFadedBrush}"
                                Text=" + " />
                            <TextBlock FontSize="12" Text="C" />
                        </StackPanel>
                    </Border>

                    <Border
                        Grid.Row="4"
                        Grid.Column="2"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundSubtleHighlightBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,1,1,1" />

                    <Border
                        Grid.Row="5"
                        Grid.Column="0"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundColorBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,1,1,1">
                        <TextBlock
                            Margin="10,3,0,3"
                            FontSize="12"
                            Text="{StaticResource ResourceKey=ResizeImage}" />
                    </Border>

                    <Border
                        Grid.Row="5"
                        Grid.Column="1"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundColorBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,1,1">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Text="J" />
                    </Border>

                    <Border
                        Grid.Row="5"
                        Grid.Column="2"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundColorBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,1,1,1">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock FontSize="12" Text="{StaticResource ResourceKey=Ctrl}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{StaticResource MainColorFadedBrush}"
                                Text=" + " />
                            <TextBlock FontSize="12" Text="{StaticResource ResourceKey=Alt}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{StaticResource MainColorFadedBrush}"
                                Text=" + " />
                            <TextBlock FontSize="12" Text="I" />
                        </StackPanel>
                    </Border>
                </Grid>

                <Label
                    Width="480"
                    Margin="-4,0,0,10"
                    d:Content="Zoom"
                    Content="{StaticResource ResourceKey=Zoom}" />

                <Grid Width="480" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="130" />
                        <ColumnDefinition Width="170" />
                    </Grid.ColumnDefinitions>
