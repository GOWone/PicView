<UserControl
    x:Class="PicView.Avalonia.Views.GeneralSettingsView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:PicView.Avalonia.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="viewModels:MainViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <viewModels:MainViewModel />
    </Design.DataContext>
    <StackPanel Orientation="Vertical">

        <ToggleButton
            Width="250"
            Margin="0,0,0,3"
            Background="Transparent"
            BorderThickness="0"
            IsChecked="{Binding IsIncludingSubdirectories}">
            <TextBlock
                Padding="4,1,0,0"
                Classes="txt"
                Text="{Binding SearchSubdirectory}" />
        </ToggleButton>

        <ToggleButton
            Width="250"
            Margin="0,0,0,3"
            Background="Transparent"
            BorderThickness="0"
            Command="{Binding ChangeTopMostCommand}"
            IsChecked="{Binding IsTopMost}">
            <TextBlock
                Padding="4,1,0,0"
                Classes="txt"
                Text="{Binding StayTopMost}" />
        </ToggleButton>

        <ToggleButton
            Width="250"
            Margin="0,0,0,3"
            Background="Transparent"
            BorderThickness="0"
            IsChecked="{Binding IsStayingCentered}">
            <TextBlock
                Padding="4,1,0,0"
                Classes="txt"
                Text="{Binding StayCentered}" />
        </ToggleButton>

        <ToggleButton
            Width="250"
            Margin="0,0,0,3"
            Background="Transparent"
            BorderThickness="0"
            IsChecked="{Binding IsFileSavingDialogShown}">
            <TextBlock
                Padding="4,1,0,0"
                Classes="txt"
                Text="{Binding ShowFileSavingDialog}" />
        </ToggleButton>

        <ToggleButton
            Width="250"
            Margin="0,0,0,3"
            Background="Transparent"
            BorderThickness="0"
            IsChecked="{Binding IsOpeningInSameWindow}">
            <TextBlock
                Padding="4,1,0,0"
                Classes="txt"
                Text="{Binding OpenInSameWindow}" />
        </ToggleButton>

        <TextBlock
            Classes="txt"
            FontFamily="/Assets/Fonts/Roboto-Bold.ttf#Roboto"
            FontSize="14"
            Text="{Binding MouseWheel}" />
        <ComboBox
            x:Name="MouseWheelBox"
            Width="250"
            Padding="5,7,0,7"
            Background="{StaticResource SecondaryBackgroundColor}"
            BorderBrush="{StaticResource MainBorderColor}"
            BorderThickness="1"
            FontFamily="/Assets/Fonts/Roboto-Medium.ttf#Roboto">
            <ComboBoxItem Content="{Binding CtrlToZoom}" IsSelected="{Binding IsCtrlToZoomEnabled}" />
            <ComboBoxItem Content="{Binding ScrollToZoom}" />
        </ComboBox>

        <TextBlock
            Classes="txt"
            FontFamily="/Assets/Fonts/Roboto-Bold.ttf#Roboto"
            FontSize="14"
            Text="{Binding ScrollDirection}" />
        <ComboBox
            x:Name="ScrollDirectionBox"
            Width="250"
            Padding="5,7,0,7"
            Background="{StaticResource SecondaryBackgroundColor}"
            BorderBrush="{StaticResource MainBorderColor}"
            BorderThickness="1"
            FontFamily="/Assets/Fonts/Roboto-Medium.ttf#Roboto">
            <ComboBoxItem Content="{Binding Reverse}" IsSelected="{Binding IsNavigatingInReverse}" />
            <ComboBoxItem Content="{Binding Forward}" />
        </ComboBox>

        <TextBlock
            Classes="txt"
            FontFamily="/Assets/Fonts/Roboto-Bold.ttf#Roboto"
            FontSize="14"
            Text="{Binding ApplicationStartup}" />
        <ComboBox
            x:Name="ApplicationStartupBox"
            Width="250"
            Padding="5,7,0,7"
            Background="{StaticResource SecondaryBackgroundColor}"
            BorderBrush="{StaticResource MainBorderColor}"
            BorderThickness="1"
            FontFamily="/Assets/Fonts/Roboto-Medium.ttf#Roboto">
            <ComboBoxItem Content="{Binding None}" />
            <ComboBoxItem Content="{Binding OpenLastFile}" IsSelected="{Binding IsOpeningLastFileOnStartup}" />
        </ComboBox>

        <TextBlock
            Classes="txt"
            FontFamily="/Assets/Fonts/Roboto-Bold.ttf#Roboto"
            FontSize="14"
            Text="{Binding AdjustTimingForSlideshow}" />

        <Slider
            Width="250"
            Height="30"
            HorizontalAlignment="Center"
            IsSnapToTickEnabled="True"
            Maximum="15"
            Minimum="1"
            TickFrequency=".5"
            TickPlacement="BottomRight"
            Value="5" />

        <TextBlock
            Classes="txt"
            FontFamily="/Assets/Fonts/Roboto-Bold.ttf#Roboto"
            FontSize="14"
            Text="{Binding AdjustTimingForZoom}" />

        <Slider
            Width="250"
            Height="30"
            HorizontalAlignment="Center"
            IsSnapToTickEnabled="True"
            Maximum="1.5"
            Minimum=".1"
            TickFrequency=".1"
            TickPlacement="BottomRight"
            Value="5" />

        <TextBlock
            Classes="txt"
            FontFamily="/Assets/Fonts/Roboto-Bold.ttf#Roboto"
            FontSize="14"
            Text="{Binding AdjustNavSpeed}" />

        <Slider
            Width="250"
            Height="30"
            HorizontalAlignment="Center"
            IsSnapToTickEnabled="True"
            Maximum="1.5"
            Minimum=".1"
            TickFrequency=".1"
            TickPlacement="BottomRight"
            Value="5" />
    </StackPanel>
</UserControl>