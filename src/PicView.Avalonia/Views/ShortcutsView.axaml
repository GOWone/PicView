                Classes="hover TStyle"
                ToolTip.Tip="{CompiledBinding ChangeKeybindingTooltip}" />
            <TextBox
                Width="140"
                Background="{StaticResource SecondaryBackgroundColor}"
                Classes="hover TStyle"
                ToolTip.Tip="{CompiledBinding ChangeKeybindingTooltip}" />
        </StackPanel>

        <StackPanel Margin="15,0,10,10" Orientation="Horizontal">
            <TextBlock
                Width="170"
                Classes="txt"
                FontFamily="/Assets/Fonts/Roboto-Bold.ttf#Roboto"
                Text="{CompiledBinding ScrollUp}" />
            <TextBox
                Width="140"
                Classes="hover TStyle"
                IsReadOnly="True" />
            <TextBox
                Width="140"
                Classes="hover TStyle"
                IsReadOnly="True" />
        </StackPanel>

        <StackPanel Margin="15,5,10,10" Orientation="Horizontal">
            <TextBlock
                Width="170"
                Classes="txt"
                FontFamily="/Assets/Fonts/Roboto-Bold.ttf#Roboto"
                Text="{CompiledBinding RotateLeft}" />
            <TextBox
                Width="140"
                Background="{StaticResource SecondaryBackgroundColor}"
                Classes="hover TStyle"
                ToolTip.Tip="{CompiledBinding ChangeKeybindingTooltip}" />
            <TextBox
                Width="140"
                Background="{StaticResource SecondaryBackgroundColor}"
                Classes="hover TStyle"
                ToolTip.Tip="{CompiledBinding ChangeKeybindingTooltip}" />
        </StackPanel>

        <StackPanel Margin="15,0,10,10" Orientation="Horizontal">
            <TextBlock
                Width="170"
                Classes="txt"
                FontFamily="/Assets/Fonts/Roboto-Bold.ttf#Roboto"
                Text="{CompiledBinding ScrollDown}" />
            <TextBox
                Width="140"
                Classes="hover TStyle"
                IsReadOnly="True" />
            <TextBox
                Width="140"
                Classes="hover TStyle"
                IsReadOnly="True" />
        </StackPanel>

        <StackPanel Margin="15,5,10,10" Orientation="Horizontal">
            <TextBlock
