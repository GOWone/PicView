        </StackPanel>

        <StackPanel Margin="15,5,10,10" Orientation="Horizontal">
            <TextBlock
                Width="170"
                Classes="txt"
                FontFamily="/Assets/Fonts/Roboto-Bold.ttf#Roboto"
                Text="{CompiledBinding ScrollToBottom}" />
            <TextBox
                Width="140"
                Background="{StaticResource SecondaryBackgroundColor}"
                Classes="hover TStyle"
                ToolTip.Tip="{CompiledBinding ChangeKeybindingTooltip}" />
            <TextBox
                Width="140"
                Background="{StaticResource SecondaryBackgroundColor}"
                Classes="hover TStyle"
                ToolTip.Tip="{CompiledBinding ToggleScroll}" />
        </StackPanel>

        <TextBlock
            Margin="10,10,10,15"
            Classes="txt"
            FontFamily="/Assets/Fonts/Roboto-Bold.ttf#Roboto"
            FontSize="14"
            Text="{CompiledBinding Zoom}"
            TextAlignment="Center" />

        <StackPanel Margin="15,5,10,10" Orientation="Horizontal">
            <TextBlock
                Width="170"
                Classes="txt"
                FontFamily="/Assets/Fonts/Roboto-Bold.ttf#Roboto"
                Text="{CompiledBinding ZoomIn}" />
            <TextBox
                Width="140"
                Background="{StaticResource SecondaryBackgroundColor}"
                Classes="hover TStyle"
                ToolTip.Tip="{CompiledBinding ChangeKeybindingTooltip}" />
            <TextBox
                Width="140"
                Background="{StaticResource SecondaryBackgroundColor}"
                Classes="hover TStyle"
                ToolTip.Tip="{CompiledBinding ChangeKeybindingTooltip}" />
        </StackPanel>

        <StackPanel Margin="15,5,10,10" Orientation="Horizontal">
            <TextBlock
