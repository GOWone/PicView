<UserControl
    x:Class="PicView.Avalonia.Views.AppearanceView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:PicView.Avalonia.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="viewModels:MainViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <viewModels:MainViewModel />
    </Design.DataContext>
    <StackPanel
        Margin="0,20,0,0"
        HorizontalAlignment="Center"
        Orientation="Vertical">

        <StackPanel Orientation="Horizontal">
            <Image
                Width="14"
                Height="14"
                Margin="0,0,8,0"
                Source="{StaticResource LanguageImage}" />
            <TextBlock
                Classes="txt"
                FontFamily="/Assets/Fonts/Roboto-Bold.ttf#Roboto"
                FontSize="14"
                Text="{Binding Language}" />
        </StackPanel>

        <ComboBox
            x:Name="LanguageBox"
            Width="270"
            Margin="0,10,0,3"
            Padding="5,7,0,7"
            Background="{StaticResource SecondaryBackgroundColor}"
            BorderBrush="{StaticResource MainBorderColor}"
            BorderThickness="1"
            FontFamily="/Assets/Fonts/Roboto-Medium.ttf#Roboto"
            SelectedIndex="0">
            <ComboBoxItem Content="test" />
            <ComboBoxItem Content="95%" />
        </ComboBox>

        <TextBlock
            Margin="0,15,0,10"
            Classes="txt"
            FontFamily="/Assets/Fonts/Roboto-Bold.ttf#Roboto"
            FontSize="14"
            Text="{Binding MiscSettings}" />

        <ToggleButton
            Width="270"
            Margin="0,0,0,3"
            Background="Transparent"
            BorderThickness="0"
            Classes="altHover"
            Command="{Binding ToggleBottomNavBarCommand}"
            IsChecked="{Binding IsBottomToolbarShown}">
            <TextBlock
                Margin="0"
                Padding="0,1,0,0"
                Classes="txt"
                Text="{Binding ShowBottomToolbar}" />
        </ToggleButton>

        <ToggleButton
            Width="270"
            Margin="0,0,0,3"
            Background="Transparent"
            BorderThickness="0"
            Classes="altHover"
            IsChecked="{Binding IsBottomGalleryShownInHiddenUI}">
            <TextBlock
                Margin="0"
                Padding="0,1,0,0"
                Classes="txt"
                Text="{Binding ShowBottomGalleryWhenUiIsHidden}" />
        </ToggleButton>

        <ToggleButton
            Width="270"
            Margin="0,0,0,3"
            Background="Transparent"
            BorderThickness="0"
            Classes="altHover"
            IsChecked="{Binding IsShowingButtonsInHiddenUI}">
            <TextBlock
                Margin="0"
                Padding="0,1,0,0"
                Classes="txt"
                Text="{Binding ShowButtonsInHiddenUI}" />
        </ToggleButton>

        <ToggleButton
            x:Name="TaskBarToggleButton"
            Width="270"
            Margin="0,0,0,3"
            Background="Transparent"
            BorderThickness="0"
            Classes="altHover"
            IsChecked="{Binding IsShowingTaskbarProgress}">
            <TextBlock
                Margin="0"
                Padding="0,1,0,0"
                Classes="txt"
                Text="{Binding ToggleTaskbarProgress}" />
        </ToggleButton>

        <Button
            Margin="0,20,0,10"
            HorizontalAlignment="Center"
            Classes="BorderStyle altHover mainBtn">
            <TextBlock Classes="txt" Text="{Binding ResetButtonText}" />
        </Button>
    </StackPanel>
</UserControl>