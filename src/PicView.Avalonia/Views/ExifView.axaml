<UserControl
    x:Class="PicView.Avalonia.Views.ExifView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:PicView.Avalonia.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:ExifViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:ExifViewModel />
    </Design.DataContext>
    <UserControl.Resources>
        <StreamGeometry x:Key="CopyGeometry">M320 448v40c0 13.255-10.745 24-24 24H24c-13.255 0-24-10.745-24-24V120c0-13.255 10.745-24 24-24h72v296c0 30.879 25.121 56 56 56h168zm0-344V0H152c-13.255 0-24 10.745-24 24v368c0 13.255 10.745 24 24 24h272c13.255 0 24-10.745 24-24V128H344c-13.2 0-24-10.8-24-24zm120.971-31.029L375.029 7.029A24 24 0 0 0 358.059 0H352v96h96v-6.059a24 24 0 0 0-7.029-16.97z</StreamGeometry>
    </UserControl.Resources>
    <StackPanel Margin="5">

        <StackPanel Margin="15,10" Orientation="Horizontal">
            <TextBlock
                Width="100"
                Margin="0,8,0,0"
                Classes="txt"
                FontSize="14"
                Text="{Binding FileName}" />
            <TextBox
                Width="150"
                Background="{StaticResource BackgroundAlpha}"
                BorderBrush="{StaticResource MainBorderColor}"
                Classes="hover" />
            <Button Classes="alphaHover BorderStyle" ToolTip.Tip="{Binding Copy}">
                <Path
                    Width="16"
                    Height="16"
                    Data="{StaticResource CopyGeometry}"
                    Fill="{StaticResource MainIconColor}"
                    Stretch="Fill" />
            </Button>
        </StackPanel>

        <StackPanel Margin="15,10" Orientation="Horizontal">
            <TextBlock
                Width="100"
                Margin="0,8,0,0"
                Classes="txt"
                FontSize="14"
                Text="{Binding Folder}" />
            <TextBox
                Width="150"
                Background="{StaticResource BackgroundAlpha}"
                BorderBrush="{StaticResource MainBorderColor}" />
            <Button Classes="alphaHover BorderStyle" ToolTip.Tip="{Binding Copy}">
                <Path
                    Width="16"
                    Height="16"
                    Data="{StaticResource CopyGeometry}"
                    Fill="{StaticResource MainIconColor}"
                    Stretch="Fill" />
            </Button>
        </StackPanel>

        <StackPanel Margin="15,10" Orientation="Horizontal">
            <TextBlock
                Width="100"
                Margin="0,8,0,0"
                Classes="txt"
                FontSize="14"
                Text="{Binding FullPath}" />
            <TextBox
                Width="150"
                Background="{StaticResource BackgroundAlpha}"
                BorderBrush="{StaticResource MainBorderColor}" />
            <Button Classes="alphaHover BorderStyle" ToolTip.Tip="{Binding Copy}">
                <Path
                    Width="16"
                    Height="16"
                    Data="{StaticResource CopyGeometry}"
                    Fill="{StaticResource MainIconColor}"
                    Stretch="Fill" />
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>