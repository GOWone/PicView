                <ToggleButton
                    Canvas.Left="7"
                    Canvas.Top="53"
                    Width="169"
                    Height="45"
                    Classes="ButtonBorder hover"
                    Command="{Binding ChangeTopMostCommand}"
                    IsChecked="{Binding IsTopMost}"
                    ToolTip.Tip="{Binding StayTopMost}">
