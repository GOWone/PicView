                        MaxWidth="150"
                        VerticalAlignment="Center"
                        FontFamily="/Assets/Fonts/Roboto-Medium.ttf#Roboto"
                        Text="{Binding StayTopMost}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="Wrap" />
                </ToggleButton>

                <ToggleButton
                    Canvas.Left="182"
                    Canvas.Top="53"
                    Width="169"
                    Height="45"
                    Classes="ButtonBorder hover"
                    Command="{Binding ChangeIncludeSubdirectoriesCommand}"
                    IsChecked="{Binding IncludeSubdirectories}"
                    ToolTip.Tip="{Binding SearchSubdirectory}">
                    <TextBlock
                        MaxWidth="150"
                        VerticalAlignment="Center"
                        FontFamily="/Assets/Fonts/Roboto-Medium.ttf#Roboto"
                        Text="{Binding SearchSubdirectory}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="Wrap" />
                </ToggleButton>

                <ToggleButton
                    Canvas.Left="7"
                    Canvas.Top="104"
                    Width="169"
                    Classes="ButtonBorder hover"
                    IsChecked="{Binding IsLooping}"
                    ToolTip.Tip="{Binding ToggleLooping}">
                    <TextBlock
                        MaxWidth="150"
                        VerticalAlignment="Center"
                        FontFamily="/Assets/Fonts/Roboto-Medium.ttf#Roboto"
                        Text="{Binding ToggleLooping}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="Wrap" />
                </ToggleButton>

