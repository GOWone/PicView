             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:views="clr-namespace:PicView.Avalonia.Views;assembly=PicView.Avalonia"
             x:Class="PicView.Avalonia.MacOS.Views.MacOSTitlebar">
