        <Button
            Width="30"
            Margin="0"
            Background="Transparent"
            BorderBrush="{StaticResource MainBorderColor}"
            BorderThickness="0"
            Classes="hover"
            DockPanel.Dock="Left">
            <Path
                Width="12"
                Height="12"
                Data="M192,96v64h248c4.4,0,8,3.6,8,8v240c0,4.4-3.6,8-8,8H136c-4.4,0-8-3.6-8-8v-48c0-4.4,3.6-8,8-8h248V224H192v64L64,192  L192,96z"
